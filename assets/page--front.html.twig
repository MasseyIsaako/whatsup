<div class="layout-container">

  <header role="banner">
    {{ page.header }}
  </header>

  {{ page.help }}

  <main role="main">
    <a id="main-content" tabindex="-1"></a>

    {{ page.branding }}
    {{ page.navigation}}

    <div class="layout-content">
      {{ page.content }}
    </div>{# /.layout-content #}

  </main>

  {% if page.footer %}
    <footer role="contentinfo">
      {{ page.footer }}
    </footer>
  {% endif %}

</div>{# /.layout-container #}
