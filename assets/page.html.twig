<div class="layout-container">

  <header role="banner">
    {{ page.header }}
  </header>

  {{ page.navigation }}

  <main role="main">
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

    <div class="layout-content">
        <div class="top-level-page-container">
          {{ page.content }}
        </div>
    </div>{# /.layout-content #}

  </main>

  {% if page.footer %}
    <footer role="contentinfo">
      {{ page.footer }}
    </footer>
  {% endif %}

</div>{# /.layout-container #}
